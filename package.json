{
  "name": "repo-file-sync-action",
  "version": "1.0.0",
  "description": "GitHub Actions that sync's two (or more) repos.",
  "keywords": [
    "sync",
    "file-sync",
    "workflow-sync",
    "github-workflow",
    "github-actions",
    "github-action-workflow-sync"
  ],
  "license": "MIT",
  "author": "Hirotomo Yamada <hirotomo.yamada@avap.co.jp>",
  "main": "dist/index.js",
  "files": [
    "dist",
    "bin"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hirotomoyamada/yamada-ui"
  },
  "scripts": {
    "prepare": "husky install",
    "lint": "eslint ./src --ext .ts --config .eslintrc --cache",
    "format:check": "prettier --check ./src --cache",
    "format:write": "prettier --write ./src --cache",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write .",
    "build": "swc src/index.ts -d dist"
  },
  "dependencies": {
    "@actions/core": "^1.6.0",
    "@actions/github": "^5.0.0",
    "@octokit/plugin-throttling": "^3.5.2",
    "@putout/git-status-porcelain": "^1.1.0",
    "action-input-parser": "^1.2.2",
    "fs-extra": "^10.0.0",
    "js-yaml": "^4.1.0",
    "node-readfiles": "^0.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.1",
    "@commitlint/config-conventional": "^18.4.0",
    "@swc/cli": "^0.1.63",
    "@swc/core": "^1.3.96",
    "@types/fs-extra": "^11.0.4",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.10.1",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-testing-library": "^6.2.0",
    "eslint-plugin-unused-imports": "^3.0.0",
    "husky": "^8.0.3",
    "lint-staged": "15.1.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  }
}
